---
import "@fontsource-variable/inter"
import "@fontsource-variable/playfair-display"
import '@fontsource-variable/overpass-mono'
import "@fontsource-variable/open-sans"
import "@fontsource-variable/playpen-sans"
import "@fontsource-variable/platypi"

import Header from "../components/Header.astro"

import "../styles/index.css"
---

<!doctype html>
<html lang="en" class="scroll-smooth h-full" >
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="font-body h-full transition-all bg-mono-base text-mono-text">
		<header>
			<Header/>
		</header>
		<main >
			<slot />
		</main>
		<footer class="bg-primary-500 text-mono-base p-4">
			<p class="italic text-sm">This is a certified <a>Emma Alexandria</a> product. Terms and conditions don't apply.</p>
		</footer>
	</body>
</html>

<style>

</style>

<script>
import {themes, initTheme} from "../lib/themes"

themes.forEach(t => initTheme(t))
</script>
